{
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "ES2020",
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["app/*"],
      "@components/*": ["components/*"],
      "@pages/*": ["pages/*"],
      "@providers/*": ["providers/*"],
      "@utils/*": ["utils/*"],
      "@store/*": ["store/*"],
      // "@api/*": ["_api/*"],
      "@theme/*": ["theme/*"],
      "@assets/*": ["assets/*"]
    }
  },
  "extends": "expo/tsconfig.base",
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "**/*.d.ts", // Include .d.ts files in all directories
    "expo-env.d.ts",
    "babel.config.js"
  ],
  "exclude": ["**/node_modules/*"]
}
